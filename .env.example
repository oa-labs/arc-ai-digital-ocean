# =============================================================================
# ArcAI Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control
# =============================================================================

# Agent Provider Selection
# Choose between 'openai' or 'digitalocean'
# Required: yes
AGENT_PROVIDER=openai

# =============================================================================
# OpenAI Configuration (when AGENT_PROVIDER=openai)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_ORGANIZATION=your-org-id-optional

# =============================================================================
# DigitalOcean Configuration (when AGENT_PROVIDER=digitalocean)
# =============================================================================
DIGITALOCEAN_API_KEY=do-your-digitalocean-api-key-here
DIGITALOCEAN_AGENT_ENDPOINT=https://api.digitalocean.com/v2/ai/chat/completions
DIGITALOCEAN_MODEL=gpt-4o-mini
DIGITALOCEAN_MAX_TOKENS=1000
DIGITALOCEAN_TEMPERATURE=0.7

# =============================================================================
# API Provider Configuration (Optional)
# =============================================================================
# Use OpenRouter for access to many models
# OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Popular OpenRouter models (when using OPENAI_BASE_URL):
# - meta-llama/llama-3.2-3b-instruct (fast, cheap)
# - meta-llama/llama-3.2-8b-instruct (balanced)
# - meta-llama/llama-3.1-8b-instruct (quality)
# - microsoft/wizardlm-2-8x22b (very capable)
# - google/gemma-7b-it
# - anthropic/claude-3-haiku (requires Anthropic API key)
# - openai/gpt-4o-mini (requires OpenAI API key)

# =============================================================================
# Supabase Configuration
# =============================================================================
# Required: yes
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# Storage Configuration (DigitalOcean Spaces or AWS S3)
# =============================================================================
# Required: yes
S3_REGION=nyc3
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_ACCESS_KEY_ID=your-storage-access-key
S3_SECRET_ACCESS_KEY=your-storage-secret-key
S3_BUCKET=your-bucket-name

# Optional S3 Settings
# S3_FORCE_PATH_STYLE=true
# STORAGE_DOWNLOAD_URL_TTL=3600

# =============================================================================
# Slack Bot Configuration (Required for Slack integration)
# =============================================================================
# Get these from your Slack app configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SOCKET_MODE=true
SLACK_PORT=3000

# =============================================================================
# Outline Integration (Required for Outline sync bot)
# =============================================================================
OUTLINE_API_URL=https://your-outline-instance.com
OUTLINE_API_TOKEN=ol_api_your-outline-api-token
COLLECTION_BLACKLIST=ops,private,temp

# =============================================================================
# Development Settings
# =============================================================================
# Enable debug logging (set to '1' to enable)
DEBUG=0

# Environment mode (development, production, test)
NODE_ENV=development